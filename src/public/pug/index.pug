doctype 
html(ng-app="fbSecretSantaApp")
  head
    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title(page-title ng-bind="title") Secret Santa
    link(rel="stylesheet" href="/asset/css/app.css")
    base(href="/")
  body
    div.container(ng-controller="MainController")
      div.row
        h1 Secret Santa üéÖ
        div.col-md-6
          form.form-group(ng-submit="submit($event)")
            | Santas, yo
            div.form-inline(ng-repeat="santa in santas track by $index")
              input.form-control(type="text" ng-model="santas[$index]")
              button.btn-default.btn(type="button" ng-click="removeSanta($index)") -
            div.form-inline
              button.btn-default.btn(ng-click="submit") Submit
              button.btn.btn-default(type="button" ng-click="addSanta()") +
        div.col-md-6
          div(ng-repeat="santa in secretSantas track by $index")
            div.panel.panel-default
              div.panel-body
                div.row
                  div.col-md-4.text-left
                    | {{santa}}
                  div.col-md-4.text-center
                    | ‚û°Ô∏è 
                  div.col-md-4.text-right
                    | {{secretSantas[santa]}}
    script(src="/asset/js/app.js")
    script(type="text/javascript").
        (function(d, s, id){
           var js, fjs = d.getElementsByTagName(s)[0];
           if (d.getElementById(id)) {return;}
           js = d.createElement(s); js.id = id;
           js.src = "//connect.facebook.net/en_US/sdk.js";
           fjs.parentNode.insertBefore(js, fjs);
         }(document, 'script', 'facebook-jssdk'));